  <script>
    const text = "The Best of Luck";
    let i = 0;
    function typing() {
      document.getElementById("typewriter").innerText = text.substring(0, i++);
      if (i <= text.length) setTimeout(typing, 150);
    }
    typing();

    function toggleMode() {
      const body = document.body;
      if (body.style.background === "black") {
        body.style.background = "linear-gradient(135deg, #1f1c2c, #928dab)";
        body.style.color = "white";
      } else {
        body.style.background = "black";
        body.style.color = "white";
      }
    }

    // Simple game logic
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    let x = 200, y = 200, size = 20, score = 0;

    function draw() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      ctx.fillStyle = '#fff';
      ctx.fillRect(x, y, size, size);
      ctx.fillStyle = '#0f0';
      ctx.fillText('Score: ' + score, 10, 10);
    }

    document.addEventListener('keydown', e => {
      switch (e.key) {
        case 'ArrowUp': y -= 10; break;
        case 'ArrowDown': y += 10; break;
        case 'ArrowLeft': x -= 10; break;
        case 'ArrowRight': x += 10; break;
      }
      score++;
      draw();
    });

    draw();
  </script>
